  <content>{{velocity}}
#macro(editFilterProperty $obj $propertyName)
    #set ($property = $obj.getProperty($propertyName))
    #set ($propertyClass = $obj.getxWikiClass().get($propertyName))
    #set ($propertyId = "URLNormalizer.Code.FilterClass_${obj.number}_${escapetool.xml($property.name)}")
    &lt;dt&gt;
      &lt;label for="$propertyId"&gt;$escapetool.xml($propertyClass.translatedPrettyName)&lt;/label&gt;
      &lt;span class="xHint"&gt;$!escapetool.xml($propertyClass.hint)&lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;
      &lt;input id="$propertyId" name="$propertyId" size="30" type="text" value="$escapetool.xml($property.value)"&gt;
    &lt;/dd&gt;
#end
{{/velocity}}

== {{translation key="urlnormalizer.admin.filters.title"/}}

{{translation key="urlnormalizer.admin.filters.description"/}}

{{velocity}}
#set ($configurationDocument = $xwiki.getDocument('URLNormalizer.Code.Configuration'))

{{html}}
#set ($discard = $xwiki.jsx.use('URLNormalizer.Code.URLNormalizerAdminSection'))
#set ($filtersDocument = $xwiki.getDocument('URLNormalizer.Code.Configuration'))
#set ($formToken = $services.csrf.getToken())
#set ($formRedirect = $xwiki.requestURL)
&lt;form id="url_filters" method="post" class="xform" action="$escapetool.xml($filtersDocument.getURL('save'))"&gt;
  &lt;input type="hidden" name="xredirect" value="$escapetool.xml($formRedirect)"/&gt;
  &lt;input type="hidden" name="form_token" value="$formToken"/&gt;

  #foreach ($filterObject in $configurationDocument.getObjects('URLNormalizer.Code.FilterClass'))
    &lt;fieldset class="box url_filter"&gt;
      &lt;dl&gt;
        #editFilterProperty($filterObject, 'sourceType')
        #editFilterProperty($filterObject, 'sourceReference')
        #editFilterProperty($filterObject, 'targetType')
        #editFilterProperty($filterObject, 'targetReference')
      &lt;/dl&gt;
      &lt;a href="$filtersDocument.getURL('objectremove', "form_token=$formToken&amp;amp;classname=URLNormalizer.Code.FilterClass&amp;amp;classid=${filterObject.number}&amp;amp;xredirect=${escapetool.url($formRedirect)}")" class="filter-action-delete" title="$services.localization.render('urlnormalizer.admin.filters.removeFilter.tooltip')"&gt;$services.localization.render('urlnormalizer.admin.filters.removeFilter')&lt;/a&gt;
    &lt;/fieldset&gt;
  #end

  &lt;p&gt;
    &lt;a href="$filtersDocument.getURL('objectadd', "form_token=$formToken&amp;amp;classname=URLNormalizer.Code.FilterClass&amp;amp;xredirect=${escapetool.url($formRedirect)}")" class="filter-action-add" title="$services.localization.render('urlnormalizer.admin.filters.addFilter')"&gt;$services.localization.render('urlnormalizer.admin.filters.addFilter')&lt;/a&gt;
  &lt;/p&gt;

  &lt;button class="btn btn-primary"&gt;$escapetool.xml($services.localization.render('urlnormalizer.admin.filters.save'))&lt;/button&gt;
&lt;/form&gt;
{{/html}}
{{/velocity}}

== {{translation key="urlnormalizer.admin.normalize"/}}

{{job id="URLNormalizer.Code.URLNormalizerAdminSection" start="{{velocity}}$request.confirm{{/velocity}}"}}
{{velocity}}
#set($logger = $services.logging.getLogger($doc.fullName))
#set($discard = $services.logging.setLevel($doc.fullName, 'INFO'))

#if ($services.security.authorization.hasAccess('admin', $services.wiki.currentWikiId))
  #if ($request.createNewVersion == '0')
    #set($createNewVersion = false)
  #else
    #set($createNewVersion = true)
  #end

  #set($documents = $services.query.hql('select doc.fullName from XWikiDocument doc group by doc.fullName').execute())
  #set($discard = $logger.info('Found [{}] documents.', $documents.size()))
  #foreach ($fullName in $documents)
    #set($documentReference = $services.model.resolveDocument($fullName))
    #set($discard = $logger.debug('Inspecting document [{}]', $documentReference))

    #if($services.urlnormalizer.normalize($documentReference, $createNewVersion))
      #set($discard = $logger.info('The document [{}] has been normalized.', $documentReference))
    #end
  #end
#else
  #set($discard = $logger.error('This jobs requires the current user to be an administrator of the wiki.'))
#end
{{/velocity}}
{{/job}}

{{velocity}}
  #set($jobStatus = $services.job.getJobStatus(['URLNormalizer.Code.URLNormalizerAdminSection']))
  #if (!$jobStatus || $jobStatus.state == 'FINISHED')
    {{html clean="false"}}
    &lt;form action="#" method="post" class="xform"&gt;
      &lt;dl&gt;
        &lt;dt&gt;
          &lt;label for="urlNormalizerNewVersions"&gt;$escapetool.xml($services.localization.render('urlnormalizer.admin.createNewVersions'))&lt;/label&gt;
          &lt;span class="xHint"&gt;$escapetool.xml($services.localization.render('urlnormalizer.admin.createNewVersions.hint'))&lt;/span&gt;
        &lt;/dt&gt;
        &lt;dd&gt;
          &lt;input id="createNewVersionYes" type="radio" name="createNewVersion" value="1" checked/&gt;
          &lt;label for="createNewVersionYes"&gt;$escapetool.xml($services.localization.render('urlnormalizer.admin.createNewVersionYes'))&lt;/label&gt;
        &lt;/dd&gt;
        &lt;dd&gt;
          &lt;input id="createNewVersionNo" type="radio" name="createNewVersion" value="0"/&gt;
          &lt;label for="createNewVersionNo"&gt;$escapetool.xml($services.localization.render('urlnormalizer.admin.createNewVersionNo'))&lt;/label&gt;
        &lt;/dd&gt;
      &lt;/dl&gt;
      &lt;p&gt;
        &lt;input type="hidden" name="confirm" value="true"/&gt;
        &lt;span class="buttonwrapper"&gt;
          &lt;input class="button" type="submit" value="$escapetool.xml($services.localization.render('urlnormalizer.admin.submit'))"/&gt;
        &lt;/span&gt;
      &lt;/p&gt;
    &lt;/form&gt;
    {{/html}}
  #end
{{/velocity}}</content>
